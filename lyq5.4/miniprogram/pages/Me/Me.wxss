page{
     height: 100%;
 }
.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #ffffff;
}


.headName{
  margin: 48rpx 0rpx 48rpx 32rpx;
  display:flex;
  align-items:center;
  text-align: center;
}


.name{
  font-size: 35rpx;
  margin-left: 24rpx;
  float: left;
}

.grayLine{
  height: 10rpx;
  width: 100%;
  background-color: #e1e3e3;
}

.testHistory,.personalInformation{
  margin: 28rpx 0rpx 28rpx 32rpx;
  display:flex;
  align-items:center;
  text-align: center;
}

.icon{
  width: 63rpx;
  height: 63rpx;
}

.text{
  color: #717171;
  font-size: 30rpx;
  margin-left: 16rpx;
}

.grayLine1{
  height: 1px;
  width: 100%;
  background-color: #e1e3e3;
}

.grayLine2{
  height: 10rpx;
  width: 100%;
  background-color: #e1e3e3;
}

.userinfo {
  display: flex;
}

.userinfo .others{
  margin-left: 40rpx;
  margin-top: 30rpx;
  display: flex;
  flex:1;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 200px;
}